{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types" : [
      "node",
      "lodash"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.spec.ts",
    "src/**/*.e2e.ts"
  ]
}